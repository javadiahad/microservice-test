{
  "provider": {
    "name": "accounts-service"
  },
  "consumer": {
    "name": "accounts-transfer-consumer"
  },
  "interactions": [
    {
      "description": "A request for transfering an money between two account",
      "request": {
        "method": "POST",
        "path": "/accounts/transfer",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "accountTo": "A300",
          "amount": 101,
          "accountFrom": "A100"
        },
        "matchingRules": {
          "body": {
            "$.accountFrom": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.accountTo": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.amount": {
              "matchers": [
                {
                  "match": "number"
                }
              ],
              "combine": "AND"
            }
          }
        }
      },
      "response": {
        "status": 400,
        "headers": {
          "Content-Type": "application/json; charset=UTF-8"
        },
        "body": {
          "errorCode": "ACC-1000"
        },
        "matchingRules": {
          "body": {
            "$.errorCode": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            }
          },
          "header": {
            "Content-Type": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "application/json(;\\s?charset=[\\w\\-]+)?"
                }
              ],
              "combine": "AND"
            }
          }
        }
      },
      "providerStates": [
        {
          "name": "Two Account exists,source account balance is Insufficient"
        }
      ]
    },
    {
      "description": "A request for transfering money between two account",
      "request": {
        "method": "POST",
        "path": "/accounts/transfer",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "accountTo": "A200",
          "amount": 100,
          "accountFrom": "A100"
        },
        "matchingRules": {
          "body": {
            "$.accountFrom": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.accountTo": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$.amount": {
              "matchers": [
                {
                  "match": "number"
                }
              ],
              "combine": "AND"
            }
          }
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "amount": 100,
          "id": 111
        },
        "matchingRules": {
          "body": {
            "$.id": {
              "matchers": [
                {
                  "match": "number"
                }
              ],
              "combine": "AND"
            },
            "$.amount": {
              "matchers": [
                {
                  "match": "decimal"
                }
              ],
              "combine": "AND"
            }
          }
        }
      },
      "providerStates": [
        {
          "name": "Two Account with sufficient balance exists"
        }
      ]
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "3.0.0"
    },
    "pact-jvm": {
      "version": "4.0.10"
    }
  }
}